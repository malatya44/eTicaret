@model IEnumerable<MaviOnline.Models.Sinif.SinifGrup3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{int a = 0; int sirano = 0;}

                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++;}@sirano</td>
                        <td>@x.marka</td>
                        @if (a == 0)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: @x.sayi%">@x.sayi</div>
                                </div>
                            </td>
                            <td><span class="badge bg-danger">% @x.sayi</span></td>
                        }
                        @if (a == 1)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: @x.sayi%">@x.sayi</div>
                                </div>
                            </td>
                            <td><span class="badge bg-warning">% @x.sayi</span></td>

                        }
                        @if (a == 2)
                        {
                            <td>
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-primary" style="width: @x.sayi%">@x.sayi</div>
                                </div>
                            </td>
                            <td><span class="badge bg-primary">% @x.sayi</span></td>

                        }
                        @if (a == 3)
                        {
                            <td>
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: @x.sayi%">@x.sayi</div>
                                </div>
                            </td>
                            <td><span class="badge bg-success">% @x.sayi</span></td>
                            a = 0;
                        }
                    </tr>
                    a++;

                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>