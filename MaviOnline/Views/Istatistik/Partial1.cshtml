@model IEnumerable<MaviOnline.Models.Sinif.SinifGrup2>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{int a = 0; int sirano = 0; decimal toplam = 100 / Convert.ToInt32(Model.Count());}

                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++;}@sirano</td>
                        <td>@x.Departman</td>
                        @if (a == 0)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: @x.Sayi%">@x.Departman</div>
                                </div>
                            </td>
                            <td><span class="badge bg-danger">% @x.Sayi</span></td>
                        }
                        @if (a == 1)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: @x.Sayi%">@x.Departman</div>
                                </div>
                            </td>
                            <td><span class="badge bg-warning">%  @x.Sayi</span></td>

                        }
                        @if (a == 2)
                        {
                            <td>
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-primary" style="width: @x.Sayi%">@x.Departman</div>
                                </div>
                            </td>
                            <td><span class="badge bg-primary">%  @x.Sayi</span></td>

                        }
                        @if (a == 3)
                        {
                            <td>
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: @x.Sayi%">@x.Departman</div>
                                </div>
                            </td>
                            <td><span class="badge bg-success">%  @x.Sayi</span></td>
                            a = 0;
                        }
                    </tr>
                    a++;

                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>