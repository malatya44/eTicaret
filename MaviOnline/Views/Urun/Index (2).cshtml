@using MaviOnline.Models.Sinif;
@using PagedList
@using PagedList.Mvc
@*@model PagedList.IPagedList<Urun>*@
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        Ürün Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>SATIŞ YAP</th>
    </tr>
    @foreach (var u in Model)
    {
<tr>

    <td>@u.UrunAd</td>
    <td>@u.Marka</td>
    <td>@u.Stok</td>
    <td>@u.AlisFiyat ₺</td>
    <td>@u.SatisFiyat ₺</td>
    <td>@u.Kategori.KategoriAd</td>
    <td><a href="/Urun/UrunSil/@u.Urunid" class="btn btn-danger">Sil</a></td>
    <td><a href="/Urun/UrunGetir/@u.Urunid" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Urun/SatisYap/@u.Urunid" class="btn btn-info">Satış Yap</a></td>

</tr>
    }
</table>
