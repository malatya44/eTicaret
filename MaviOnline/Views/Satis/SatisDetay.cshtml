@using MaviOnline.Models.Sinif
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Satış Detayı</h2>
<br />

@*nuget ten eklenti olarak jquery datatables i kurdum buranın
    tablo yapısı için content klasörüne data table eklentileri getirdim*@
<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Satisid</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Cariler.CariAd @x.Cariler.CariSoyad </td>
            <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad </td>

            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih</td>


        </tr>
    }
</table>

<a href="#" class="btn btn-default" style="background-color:dodgerblue">Yazdır</a>